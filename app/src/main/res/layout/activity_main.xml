<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="50dp"
        android:id="@+id/textview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/black"
        android:hint="User Name"
        android:id="@+id/textBox"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:textColorHint="@color/teal_700"
        android:padding="10dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
         />
    <TextView
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/textBox"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:id="@+id/textview2"
        android:text="1. This User Name is the Edit text component being used.\n2. The Edit Text is used for getting input from the user.\n3. We can add anything within the Edit Text as input. \n4. Edit text in Android is as same as Text Box in HTML."
        android:textSize="20dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button1"
        android:padding="10dp"
        android:background="@color/black"
        android:layout_margin="100dp"
        android:text="Next"/>
</androidx.constraintlayout.widget.ConstraintLayout>