<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SecondActivity"
    tools:ignore="ExtraText">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="Radio Buttons\n &amp; Radio Group"
        android:textColor="@color/white"
        android:background="@color/black"
        android:id="@+id/radioDeclare"
        android:textSize="40dp"
        tools:ignore="MissingConstraints" />
    <RadioButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioDeclare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="one"
        android:textSize="25dp"
        android:padding="10dp"
        android:id="@+id/radioButton1"
        android:layout_margin="20dp"/>
    <RadioButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="two"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/radioButton2"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/radioButton2"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/RadioGroup"
        app:layout_constraintEnd_toEndOf="parent">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="Group Button 1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/RadioGroupButton1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Group Button 2"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/RadioGroupButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#A2FF00"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/RadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/nextButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textColor="#A2FF00"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/previousButton"
        />



</androidx.constraintlayout.widget.ConstraintLayout>